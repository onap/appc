		<dependency>
			<groupId>org.openecomp.sdnc.adaptors</groupId>
			<artifactId>sql-resource-provider</artifactId>
			<version>${openecomp.sdnc.sql-resource.version}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>
